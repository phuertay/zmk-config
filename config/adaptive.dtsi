#define ADAPTIVE_DELAY 335


#define ZMK_MACRO_VF(name,...) \
	name: name { \
			label = ZMK_MACRO_STRINGIFY(ZM_ ## name); \
			compatible = "zmk,behavior-macro"; \
			#binding-cells = <0>; \
			wait-ms = <1>; \
			tap-ms = <1>; \
			__VA_ARGS__ \
		};

#define ZMK_MACRO_F(name,...) \
	name: name { \
			label = ZMK_MACRO_STRINGIFY(ZM_ ## name); \
			compatible = "zmk,behavior-macro"; \
			#binding-cells = <0>; \
			wait-ms = <12>; \
			tap-ms = <12>; \
			__VA_ARGS__ \
		};

